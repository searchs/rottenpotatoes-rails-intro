%div.panel.panel-warning
  -# in app/views/movies/show.html.haml
  
  %div.panel-heading
    %h2 Details about #{@movie.title}
 
  %div.panel-body 
    %ul#details
      %li
        Rating:
        = @movie.rating
      %li
        Released on:
        = @movie.release_date.strftime("%B %d, %Y")
    
    %h3 Description:
    
    %p#description= @movie.description
  
    %ul.nav.nav-justified
      %li= link_to 'Edit', edit_movie_path(@movie)
      %li= button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?', :class => "btn btn-danger"
      %li= link_to 'Back to movie list', movies_path
